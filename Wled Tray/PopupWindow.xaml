<Window x:Class="Wled_Tray.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wled_Tray"
        mc:Ignorable="d"
        Title="PopupWindow" Height="430" Width="360" WindowStyle="None" ResizeMode="NoResize" SnapsToDevicePixels="True" ShowInTaskbar="False" UseLayoutRounding="True" AllowsTransparency="True" Background="{x:Null}" Topmost="True">

    <Window.Resources>

        <!-- Скрытый RepeatButton для полосы слайдера -->
        <Style x:Key="InvisibleRepeatButton" TargetType="RepeatButton">
            <Setter Property="Background" Value="#FF808080"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="{TemplateBinding Background}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Общий стиль слайдера -->
        <Style x:Key="CustomSlider" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Track x:Name="PART_Track" VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Style="{StaticResource InvisibleRepeatButton}" 
                                                  IsTabStop="False" Background="#FF272727" Height="4" />
                                </Track.DecreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb Width="16" Height="16" Background="#FF595959" BorderBrush="#FF999999" BorderThickness="1">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="{TemplateBinding Background}" 
                                                         Stroke="{TemplateBinding BorderBrush}" 
                                                         StrokeThickness="{TemplateBinding BorderThickness}"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>

                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Style="{StaticResource InvisibleRepeatButton}" 
                                                  IsTabStop="False" Background="#FF272727" Height="4" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="HueSlider" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid x:Name="RootGrid">
                            <!-- Цветная линия (фон трека, по HUE) -->
                            <Rectangle x:Name="HueBar" Height="4" VerticalAlignment="Center" RadiusX="2" RadiusY="2" />

                            <!-- Трек -->
                            <Track x:Name="PART_Track" VerticalAlignment="Center">
                                <!-- Левая часть трека (не используется отдельно) -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Style="{StaticResource InvisibleRepeatButton}" 
                                          IsTabStop="False" Background="Transparent" Height="4" />
                                </Track.DecreaseRepeatButton>

                                <!-- Ползунок -->
                                <Track.Thumb>
                                    <Thumb Width="16" Height="16" Background="#FF595959" BorderBrush="#FF999999" BorderThickness="1">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="{TemplateBinding Background}" 
                                                 Stroke="{TemplateBinding BorderBrush}" 
                                                 StrokeThickness="{TemplateBinding BorderThickness}"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>

                                <!-- Правая часть трека -->
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Style="{StaticResource InvisibleRepeatButton}" 
                                          IsTabStop="False" Background="Transparent" Height="4" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border x:Name="Header" Grid.ColumnSpan="2" Margin="0,0,0,52" BorderBrush="#FF3C3C3C" BorderThickness="1,1,1,0" CornerRadius="10,10,0,0" Background="#FF2F2F2F">
            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Padding="10">
                <ItemsControl x:Name="CardsList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF3A3A3A" CornerRadius="8" Margin="0,0,0,12" Padding="12">
                                <StackPanel>
                                    <!-- Заголовок -->
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,8"/>

                                    <!-- Три слайдера с их значениями -->
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Яркость -->
                                        <Slider Style="{StaticResource CustomSlider}" Grid.Row="0" Grid.Column="0" IsSnapToTickEnabled="True" TickFrequency="1" Minimum="0" Maximum="255" Value="{Binding Brightness, Mode=TwoWay}" PreviewMouseLeftButtonUp="Slider_OnValueChanged"  />
                                        <TextBlock Grid.Row="0" FontSize="16" Grid.Column="1" Text="{Binding Brightness}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />

                                        <!-- Сатурация 
                                       <Slider Style="{StaticResource CustomSlider}" Grid.Row="1" Grid.Column="0" IsSnapToTickEnabled="True" TickFrequency="1" Minimum="0" Maximum="255" Value="{Binding Saturation, Mode=TwoWay}" PreviewMouseLeftButtonUp="Slider_OnValueChanged"  Margin="0,8,0,0" />
                                       <TextBlock Grid.Row="1" FontSize="16" Grid.Column="1" Text="{Binding Saturation}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,8,0,0" />
                                        -->
                                        <!-- Цвет -->
                                        <Slider Style="{StaticResource HueSlider}" Grid.Row="2" Grid.Column="0" Loaded="HueSlider_Loaded" IsSnapToTickEnabled="True" TickFrequency="1" Minimum="0" Maximum="255" Value="{Binding Color, Mode=TwoWay}" PreviewMouseLeftButtonUp="Slider_OnValueChanged"  Margin="0,8,0,0" />
                                        <TextBlock Grid.Row="2" FontSize="16" Grid.Column="1" Text="{Binding Color}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,8,0,0" />
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Border x:Name="Footer" Grid.ColumnSpan="2" Background="#FF282828" Margin="0,378,0,0" BorderBrush="#FF3C3C3C" CornerRadius="0,0,10,10" BorderThickness="1,0,1,1">
            <Grid Margin="-1,0,-1,-1">
                <Button x:Name="Settings" Content="⚙️" BorderBrush="{x:Null}" Background="Transparent" FontSize="24" Cursor="Hand" Focusable="False" Margin="315,7,15,13" Click="Settings_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#FF636363"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#333333"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                    <Setter Property="Background" Value="#222222"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Label Content="Управление WLED" Margin="10,10,239,16" Foreground="#FFAFAFAF"/>
            </Grid>
        </Border>
    </Grid>
</Window>
