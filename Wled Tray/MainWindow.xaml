<Window x:Class="Wled_Tray.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wled_Tray"
        mc:Ignorable="d"
        Title="Настройки Wled Tray" Height="700" Width="1000" Background="{x:Null}" WindowStyle="None" ResizeMode="NoResize" SnapsToDevicePixels="True" AllowsTransparency="True">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="CustomRoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="BorderBrush" Value="#FF3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="border" Property="Background" Value="#FF444444"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFB7B7B7"/>
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#AA0000"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomRoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="BorderBrush" Value="#FF3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF222222"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <Border x:Name="RightMenu" BorderBrush="#FF3C3C3C" Background="#FF2D2D2D" Margin="226,32,0,0" CornerRadius="0,0,10,0" BorderThickness="0,0,1,1">
            <Grid x:Name="Right">
                <Grid x:Name="_1" d:IsHidden="True">
                    <Border x:Name="Lang" Margin="10,10,10,596" Background="#FF282828" CornerRadius="10,10,10,10" Padding="3,0,0,0" BorderThickness="1,1,1,1" BorderBrush="#FF3C3C3C">
                        <Grid>
                            <Label x:Name="LangLabel" Content="Язык" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="39" Width="334" Foreground="White" FontSize="20" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform AngleY="0.059"/>
                                        <RotateTransform/>
                                        <TranslateTransform Y="0.249"/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Button Style="{StaticResource CustomRoundedButton}" Click="Rus_Clk" Content="Русский" Width="80" Margin="658,10,10,10"/>
                            <Button Style="{StaticResource CustomRoundedButton}" Click="Eng_Clk" Content="English" Width="80" Margin="568,10,100,10"/>

                        </Grid>
                    </Border>
                    <Border x:Name="Autostart" Margin="10,76,10,530" Background="#FF282828" CornerRadius="10,10,10,10" Padding="3,0,0,0" BorderThickness="1,1,1,1" BorderBrush="#FF3C3C3C">
                        <Grid>
                            <Label x:Name="AutoLabel" Content="Автозапуск" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="39" Width="334" Foreground="White" FontSize="20" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform AngleY="0.059"/>
                                        <RotateTransform/>
                                        <TranslateTransform Y="0.249"/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Button x:Name="RemoveAuto" Style="{StaticResource CustomRoundedButton}" Click="RemoveAuto_Clk" Content="Убрать" Width="80" Margin="658,10,10,10" d:IsHidden="True"/>
                            <Button x:Name="AddAuto" Style="{StaticResource CustomRoundedButton}" Click="AddAuto_Clk" Content="Добавить" Width="80" Margin="658,10,10,10"/>

                        </Grid>
                    </Border>
                </Grid>
                <Grid x:Name="_2">
                    <Border x:Name="WledIP" Margin="10,10,10,596" Background="#FF282828" CornerRadius="10,10,10,10" Padding="3,0,0,0" BorderThickness="1,1,1,1" BorderBrush="#FF3C3C3C">
                        <Grid>
                            <Label Content="WLED IP" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="39" Width="334" Foreground="White" FontSize="20" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform AngleY="0.059"/>
                                        <RotateTransform/>
                                        <TranslateTransform Y="0.249"/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Grid Margin="494,10,95,10">
                                <!-- Сам TextBox -->
                                <TextBox x:Name="IpInput"
             Style="{StaticResource CustomRoundedTextBox}"
             Text=""
             FontSize="16" Height="NaN" Margin="0,0,-1,-1"
             />

                                <!-- Placeholder -->
                                <TextBlock Text="192.168.X.X"
               Foreground="#FF777777"
               FontSize="16"
               IsHitTestVisible="False"
               Margin="8,0,0,0"
               VerticalAlignment="Center"
               Visibility="{Binding Text.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, ElementName=IpInput}"/>
                            </Grid>
                            <Button x:Name="AddBtn" Style="{StaticResource CustomRoundedButton}" Click="Add_Clk" Content="Добавить" Width="80" Margin="658,10,10,10" IsDefault="True"/>

                        </Grid>
                    </Border>
                    <!-- Список карточек -->
                    <ListBox x:Name="CardList"  ScrollViewer.VerticalScrollBarVisibility="Hidden" Focusable="False" HorizontalContentAlignment="Stretch" BorderBrush="{x:Null}"   SelectionMode="Single" BorderThickness="1" Margin="0,87,0,10" Background="{x:Null}" Foreground="{x:Null}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FF282828" CornerRadius="10" Margin="5" Padding="10" BorderBrush="#FF3C3C3C" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Название карточки -->
                                        <TextBlock Text="{Binding Title}" FontSize="16" Foreground="White" VerticalAlignment="Center"/>

                                        <!-- Кнопка удаления -->
                                        <Button Content="✖" Width="30" Height="30" Grid.Column="1"
                                Click="DeleteCard_Click"
                                Style="{StaticResource DeleteButtonStyle}"
                                Cursor="Hand" FontSize="14"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                <Grid x:Name="_3" d:IsHidden="True">
                    <Label Content="GitHub - https://github.com/Ve5os/Wled-Tray" HorizontalAlignment="Center" Margin="0,629,0,0" VerticalAlignment="Top" Height="28" Width="753" Foreground="White"/>
                </Grid>
            </Grid>
        </Border>
        <Border x:Name="LeftMenu" BorderBrush="#FF3C3C3C" Background="#FF282828" Margin="0,32,774,0" CornerRadius="0,0,0,10" BorderThickness="1,0,0,1">
            <Grid>
                <Button x:Name="Main" Style="{StaticResource CustomRoundedButton}" Content="⚙️ Общие" Margin="10,10,10,607" Click="Main_Clk"/>
                <Button x:Name="Wled" Style="{StaticResource CustomRoundedButton}" Content="💡 WLED" Margin="0,65,0,552" Click="Wled_Clk" HorizontalAlignment="Center" Width="205" />
                <Button x:Name="Information" Style="{StaticResource CustomRoundedButton}" Content="⚠️ Информация" Margin="10,120,10,497" Click="Info_Clk"/>
            </Grid>
        </Border>
        <Border x:Name="DragBorder" BorderThickness="1,1,1,0" Margin="0,0,0,668" Background="#FF282828" BorderBrush="#FF3C3C3C" CornerRadius="10,10,0,0" MouseLeftButtonDown="DragBorder_MouseLeftButtonDown">
            <Label x:Name="TittleLabel" Content="Настройки Wled Tray" Foreground="White" Margin="9,0,0,0"/>
        </Border>
        <Button x:Name="CloseButton" Content="❌"
        Margin="969,1,1,668"
        FontFamily="Segoe UI Light"
        FontSize="16"
        Cursor="Hand"
        Click="CloseBTN_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Foreground" Value="#FFB7B7B7"/>
                    <Setter Property="FontFamily" Value="Segoe UI Light"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#AA0000"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Foreground" Value="Gray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Window>
